<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.gehc.platform</groupId>
		<artifactId>micro-service-parent</artifactId>
		<version>1.0.0</version>
	</parent>
	<groupId>com.ge.med.xray.protocoldb</groupId>
	<artifactId>protocoldb</artifactId>
	<name>protocoldb</name>
	<version>1.0.0</version>
	<packaging>rpm</packaging>

	<properties>
		<targetArch>x86_64</targetArch>
		<!-- Used for RPM building -->
		<RPM_version>${RPMV}</RPM_version>
		<RPM_release>${RPMR}</RPM_release>
	</properties>

	<organization>
		<name>GE Healthcare Imaging</name>
		<url>https://www.gehealthcare.com</url>
	</organization>


	<distributionManagement>
		<repository>
			<id>${deployment.id}</id>
			<name>Artifact Repository</name>
			<uniqueVersion>false</uniqueVersion>
			<layout>default</layout>
			<url>${deployment.url}</url>
		</repository>
		<snapshotRepository>
			<id>${deployment.id}</id>
			<name>Artifact Snapshot Repository</name>
			<url>${deployment.url}</url>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>rpm-maven-plugin</artifactId>
					<version>2.1-alpha-1</version>
					<configuration>
						<provides>
							<provide>${project.name}</provide>
						</provides>
						<needarch>${targetArch}</needarch>
						<group>${project.groupId}</group>
						<name>${project.name}</name>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>wagon-maven-plugin</artifactId>
					<version>1.0-beta-4</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>wagon-maven-plugin</artifactId>
				<version>1.0-beta-4</version>
				<inherited>true</inherited>
				<executions>
					<execution>
						<id>upload-rpm</id>
						<phase>deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<fromDir>target/rpm/protocoldb/RPMS/${targetArch}</fromDir>
							<includes>*.rpm</includes>
							<url>file://${PROJECT_HOME}/packages/rpmstaging/</url>
							<toDir>${project.groupId}</toDir>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<provides>
						<provide>${project.name}</provide>
					</provides>
					<needarch>${targetArch}</needarch>
					<group>${project.groupId}</group>
					<name>protocoldb</name>
					<projversion>${RPM_version}</projversion>
					<release>${RPM_release}</release>
					<mappings>
						<mapping>
							<directory>/protocoldb</directory>
							<sources>
								<source>
									<location>${PROJECT_HOME}/protocoldb-rest/target/</location>
									<includes>
										<include>*.jar</include>
									</includes>
								</source>
							</sources>
						</mapping>
					</mappings>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>